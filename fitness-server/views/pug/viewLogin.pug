doctype html
html(lang="hu")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Bejelentkezés
    link(href="/output.css" rel="stylesheet")
  body.bg-gray-100.flex
    .bg-white.p-6.rounded-lg.shadow-md.w-96.mt-4(style="margin-left: 30%")
      h1.text-2xl.font-bold.mb-6.text-center.text-gray-800 Bejelentkezés
      form(action="/login" method="POST" class="space-y-4 mt-4")
        div
          label(for="username" class="block text-gray-700") Felhasználónév
          input#username(type="text" name="username" class="w-full p-2 border border-gray-300 rounded" required)
        div
          label(for="password" class="block text-gray-700") Jelszó
          input#password(type="password" name="password" class="w-full p-2 border border-gray-300 rounded" required)
        div
          button(type="submit" class="mt-4 w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600") Bejelentkezés
        div.mt-4
          a(href="/register" class="text-blue-500 hover:underline") Regisztráció