doctype html
html(lang="hu")
  head
    meta(charset="UTF-8")
    title Felhasználók listája
    link(href="/output.css" rel="stylesheet")
  body.bg-gray-100.text-gray-900
    .container.mx-auto.p-4
      h1.text-2xl.font-bold.mb-4 Felhasználók listája
      table.min-w-full.bg-white.border
        thead
          tr
            th.py-2.px-4.border Felhasználónév
            th.py-2.px-4.border Keresztnév
            th.py-2.px-4.border Vezetéknév
            th.py-2.px-4.border Műveletek
        tbody
          each user in users
            tr
              td.py-2.px-4.border= user.username
              td.py-2.px-4.border= user.first_name
              td.py-2.px-4.border= user.last_name
              td.py-2.px-4.border
                a.text-blue-500.hover:underline(href=`/users/edit/${user.id}`) Szerkesztés
