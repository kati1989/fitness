doctype html
html(lang="hu")
  head
    meta(charset="UTF-8")
    title Regisztráció
    link(href="/output.css" rel="stylesheet")
  body.bg-gray-100.text-gray-900
    .container.mx-auto.p-4
      h1.text-2xl.font-bold.mb-4 Regisztráció
      form(method="POST" action="/register" class="bg-white p-6 rounded shadow-md")
        .mb-4
          label(for="username" class="block text-gray-700") Felhasználónév
          input#username(type="text" name="username" class="w-full border-gray-300 rounded mt-1" required)
        .mb-4
          label(for="first_name" class="block text-gray-700") Keresztnév
          input#first_name(type="text" name="first_name" class="w-full border-gray-300 rounded mt-1" required)
        .mb-4
          label(for="last_name" class="block text-gray-700") Vezetéknév
          input#last_name(type="text" name="last_name" class="w-full border-gray-300 rounded mt-1" required)
        .mb-4
          label(for="birth_date" class="block text-gray-700") Születési dátum
          input#birth_date(type="date" name="birth_date" class="w-full border-gray-300 rounded mt-1" required)
        .mb-4
          label(for="password" class="block text-gray-700") Jelszó
          input#password(type="password" name="password" class="w-full border-gray-300 rounded mt-1" required)
        .mb-4
          label(for="confirm_password" class="block text-gray-700") Jelszó megerősítése
          input#confirm_password(type="password" name="confirm_password" class="w-full border-gray-300 rounded mt-1" required)
        button(type="submit" class="bg-blue-500 text-white px-4 py-2 rounded") Regisztráció