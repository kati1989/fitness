doctype html
html(lang="hu")
  head
    meta(charset="UTF-8")
    title Felhasználó szerkesztése
    link(href="/output.css" rel="stylesheet")
  body.bg-gray-100.text-gray-900
    .container.mx-auto.p-4
      h1.text-2xl.font-bold.mb-4 Felhasználó szerkesztése
      form(method="POST" action=`/users/edit/${user.id}` class="bg-white p-6 rounded shadow-md")
        .mb-4
          label.block.text-gray-700(for="username") Felhasználónév
          input#username.w-full.border-gray-300.rounded.mt-1(type="text" name="username" value=user.username required)
        .mb-4
          label.block.text-gray-700(for="first_name") Keresztnév
          input#first_name.w-full.border-gray-300.rounded.mt-1(type="text" name="first_name" value=user.first_name required)
        .mb-4
          label.block.text-gray-700(for="last_name") Vezetéknév
          input#last_name.w-full.border-gray-300.rounded.mt-1(type="text" name="last_name" value=user.last_name required)
        .mb-4
          label.block.text-gray-700(for="birth_date") Születési dátum
          input#birth_date.w-full.border-gray-300.rounded.mt-1(type="date" name="birth_date" value=user.birth_date required)
        .flex.justify-between
          button.bg-blue-500.text-white.px-4.py-2.rounded(type="submit") Mentés
          a.text-gray-500.hover:underline(href="/users") Mégse
